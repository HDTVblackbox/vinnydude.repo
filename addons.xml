<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.dailyflix"
       name="Dailyflix"
       version="1.0"
       provider-name="Vinnydude">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
    <import addon="script.module.urlresolver" version="0.0.1"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Dailyflix</summary>
    <description lang="en">A plugin in for Dailyflix</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.Vinnydude" name="Addons by Vinnydude" version="1.0" provider-name="Vinnydude">
	<extension point="xbmc.addon.repository" name="Addons From Vinnydude">
		<info compressed="false">https://github.com/vinnydude/vinnydude.repo/raw/master/addons.xml</info>
		<checksum>https://github.com/vinnydude/vinnydude.repo/raw/master/addons.xml.md5</checksum>
		<datadir zip="true">https://github.com/vinnydude/vinnydude.repo/raw/master/zips</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Repo for Dailyflix</summary>
		<description>Download and install addons from Vinnydude.......For OFFICIAL !! Support Visit XBMCHUB.COM</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
